extends layout

block content
	div#header
		h1 TITLE YAYAYYAY

	ul.nav.nav-tabs
		li.active(role='presentation')
			a(href='#') Scripted
		li
			a(href='/home') Unscripted

	div#container.container
		div.row
			div#left.col-md-2
				div.button-title Category
				form.radio
					p
						label
							input(type='radio' name='category')
							| Emergency
					p
						label
							input(type='radio' name='category')
							| Closings
					p
						label
							input(type='radio' name='category')
							| Delays

				div.button-title Priority
				form.radio
					p
						label
							input(type='radio' name='priority')
							| High
					p
						label
							input(type='radio' name='priority')
							| Medium 
					p
						label
							input(type='radio' name='priority')
							| Low

			div#middle.col-md-10
				div#text.input-group
					div.input-group
						span.input-group-addon
							| School closed on
						input.form-control(type='text' placeholder='Date')
						span.input-group-addon
							| due to
						input.form-control(type='text' placeholder='Reason')
						span.input-group-addon
							|.
					div.input-group
						span.input-group-addon
							| School will reopen the next day unless further notified.
						input.form-control(type='text' placeholder='Further instructions or messages')

					div#submit-button
						input.btn.btn-default(type="submit" value="Send")